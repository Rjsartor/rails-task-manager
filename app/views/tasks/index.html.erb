<h2>My tasks</h2>
<% @tasks.each do |task| %>
  <%  if task.completed == true %>
   <p> <i class="fa fa-check-square-o" aria-hidden="true"></i>
      <%= link_to task.title, task_path(task[:id]) %> - <i class="fa fa-trash-o" aria-hidden="true"></i></p>
  <% else %>
   <p><i class="fa fa-square-o" aria-hidden="true"></i>
    <%= link_to task.title, task_path(task[:id]) %> - <i class="fa fa-trash-o" aria-hidden="true"></i></p>

  <% end %>
<% end %>


<%= link_to "Create New Task", tasks_new_path %>

